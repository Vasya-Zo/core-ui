    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "lib": [
            "es6",
            "dom",
            "es2017"
        ],
        "target": "es6",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strictNullChecks": true
    },
    "include": [
        "./src/**/*"
    ]
}