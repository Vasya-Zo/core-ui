{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es2018",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "noEmit": true,
        "pretty": true
    },
    "include": [
        "./src/**/*"
    ]
}